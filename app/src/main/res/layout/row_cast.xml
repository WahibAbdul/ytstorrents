<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/backView"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin_medium"
                android:paddingLeft="@dimen/activity_vertical_margin_medium"
                android:paddingRight="@dimen/activity_vertical_margin_medium"
                android:paddingTop="@dimen/activity_vertical_margin_medium">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_person"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:src="@drawable/person"
        app:riv_corner_radius="23dp"/>

    <codeclobber.com.ytsbrowser.views.textview.CCTextViewRobotoMedium
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_person"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/img_person"
        android:layout_toRightOf="@+id/img_person"
        android:lines="1"
        android:text="@string/title"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_XMedium"/>

    <codeclobber.com.ytsbrowser.views.textview.CCTextViewRobotoRegular
        android:id="@+id/tv_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/img_person"
        android:layout_toRightOf="@+id/img_person"
        android:lines="1"
        android:text="@string/as"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_XMedium"/>

    <codeclobber.com.ytsbrowser.views.textview.CCTextViewRobotoMedium
        android:id="@+id/tv_characterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_vertical_margin_small"
        android:layout_marginRight="@dimen/activity_vertical_margin_small"
        android:layout_toEndOf="@+id/tv_as"
        android:layout_toRightOf="@+id/tv_as"
        android:lines="1"
        android:text="@string/title"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_size_XMedium"/>

</RelativeLayout>
